<div class="nav justify-content-end">
  <%= link_to "一覧", admin_products_path, class: "btn btn-primary me-4" %>
</div>
<%= render partial: "shared/error_messages", locals: { product: product } %>
<div class="row">
  <%= form_with model: [:admin, @product], class: "row", local: true do |form| %>
    <div class="form-group m-2 col-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", id: "product_name", placeholder: "商品名" %>
    </div>
    <div class="form-group m-2 col-3">
      <%= form.label :price %>
      <%= form.text_field :price, class: "form-control", id: "product_price", placeholder: "円" %>
    </div>
    <div class="form-group m-2 col-3">
      <%= form.label :stock %>
      <%= form.text_field :stock, class: "form-control", id: "product_stock", placeholder: "在庫数" %>
    </div>
    <div class="form-group m-2 col-10">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", id: "product_description" , placeholder: "商品説明" %>
    </div>
    <div class="form-group m-2 col-10">
      <%= form.label :image %>
      <%= form.file_field :image, class: "form-control", id: "product_image" %>
    </div>
    <div class="m-2 mb-4">
      <%= form.submit nil, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
